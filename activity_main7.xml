<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7"
    android:background="@color/light">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="@string/faculty_register1"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/textView20"
        android:layout_marginTop="60dp"
        android:fontFamily="casual"
        android:text="@string/name5"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="15sp"/>

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textView20"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/textView21"
        android:autofillHints=""
        android:hint="@string/name3"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="DuplicateSpeakableTextCheck"
        android:layout_marginStart="15sp"/>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/textView21"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="@string/email2"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="15sp"/>

    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_below="@id/editTextTextPersonName4"
        android:layout_marginTop="15dp"
        android:hint="@string/email3"
        android:layout_toEndOf="@id/textView22"
        android:autofillHints=""
        android:layout_marginStart="15sp"/>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/textView22"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="@string/Password"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="15sp"/>

    <EditText
        android:id="@+id/editTextTextPassword5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/editTextTextEmailAddress2"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/textView23"
        android:autofillHints=""
        android:hint="@string/password4"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textSize="20sp"
        android:layout_marginStart="15sp"/>

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/textView23"
        android:layout_marginTop="15dp"
        android:fontFamily="casual"
        android:text="@string/confirm_password"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="15sp"/>

    <EditText
        android:id="@+id/editTextTextPassword6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/editTextTextPassword5"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/textView24"
        android:autofillHints=""
        android:hint="@string/confirmpassword"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textSize="20sp"
        android:layout_marginStart="15sp"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPassword6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:backgroundTint="@color/black"
        android:fontFamily="casual"
        android:text="@string/Register"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>


</RelativeLayout>