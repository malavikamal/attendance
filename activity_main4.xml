<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4"
    android:background="@color/light">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="@string/faculty_login1"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textView5"
        android:layout_marginTop="80sp"
        android:layout_toEndOf="@id/imageView4"
        android:autofillHints=""
        android:hint="@string/userName"
        android:inputType="textPersonName"
        android:textColorHint="#F33E3D3D" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_baseline_person_24"
        android:layout_marginTop="90dp"
        android:scrollbarSize="120dp"
        android:layout_below="@id/textView5"
        android:contentDescription="@string/key1"
        android:layout_marginStart="15sp"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_baseline_key_24"
        android:layout_marginTop="40dp"
        android:layout_below="@id/imageView4"
        android:contentDescription="@string/person1"
        android:layout_marginStart="15sp"/>


    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/editTextTextPersonName2"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/imageView5"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/purple_200"
        android:textColorHint="#F23E3D3D"
        android:textSize="20sp"
        tools:ignore="TextContrastCheck"
        android:autofillHints="" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPassword2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60sp"
        android:backgroundTint="@color/black"
        android:fontFamily="casual"
        android:text="@string/login2"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/button3"
        android:layout_marginStart="15sp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/black"
        android:fontFamily="casual"
        android:text="@string/forget_password1"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/button4"
        android:layout_marginStart="15sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:fontFamily="casual"
        android:text="@string/register1"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/if_forget_password1"
        android:layout_below="@id/button3"
        android:layout_marginTop="90dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/button4"
        android:layout_marginStart="15sp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/if_don_t_have_an_account1"
        android:layout_below="@id/textView6"
        android:layout_marginTop="40dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/button5"
        android:layout_marginStart="15sp"/>
</RelativeLayout>