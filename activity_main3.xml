<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="@color/light">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="@string/studentlogin"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textView2"
        android:layout_marginTop="80sp"
        android:layout_toEndOf="@id/imageView2"
        android:autofillHints=""
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:textColorHint="#F23E3D3D" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_baseline_person_24"
        android:layout_marginTop="90dp"
        android:scrollbarSize="120dp"
        android:layout_below="@id/textView2"
        android:contentDescription="@string/person"
        android:layout_marginStart="15sp"/>

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/editTextTextPersonName"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/imageView3"
        android:autofillHints=""
        android:hint="@string/Password"
        android:inputType="textPassword"
        android:textColorHint="#F23E3D3D"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_baseline_key_24"
        android:layout_marginTop="40dp"
        android:layout_below="@id/imageView2"
        android:contentDescription="@string/key"
        android:layout_marginStart="15sp"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60sp"
        android:backgroundTint="@color/black"
        android:fontFamily="casual"
        android:text="@string/Login"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/button6"
        android:layout_marginStart="15sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:fontFamily="casual"
        android:scrollbarSize="40dp"
        android:text="@string/Register"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/button6"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/button5"
        android:text="@string/if_don_t_have_account"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginStart="15sp"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/button4"
        android:layout_marginStart="15sp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/black"
        android:fontFamily="casual"
        android:scrollbarSize="40dp"
        android:text="@string/forgot_password"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

       <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/if_forgot_password"
        android:textSize="15sp"
        android:layout_marginTop="90dp"
        android:layout_below="@id/button4"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/button6"
           android:layout_marginStart="15sp"/>


</RelativeLayout>